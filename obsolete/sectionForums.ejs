
	<section id="forums">
		<h3>Forums</h3>
		<hr>
		<!-- from http://getbootstrap.com/2.3.2/javascript.html#tabs -->
		<ul class="nav nav-tabs">
			<li class="active"><a href="#forumsView" data-toggle="tab">View</a></li>
			<li><a href="#forumsEdit" data-toggle="tab">Edit</a></li>
		</ul>
		<div id="forumsContent" class="tab-content">
			<div class="tab-pane fade in active" id="forumsView">
			    <p>
					<%= problem.forums %>
			    </p>
			</div>
			<div class="tab-pane fade" id="forumsEdit">
			<form name="forumsInput" action="/submitEdit">
				<input type="hidden" name="problemName" value="<%= problem.nid %>">
				<input type="hidden" name="problemSection" value="forums">
				<input type="hidden" name="problemOldText" value="<%= problem.forums %>">
			    	<textarea name="problemNewText" rows="10" cols="300" class="span9"><%= problem.forums %></textarea>
				<button type="submit" class="btn">Save</button>
			</form>
			</div>
		</div>
	</section>