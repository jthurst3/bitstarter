
	<section id="faq">
		<h3>FAQ</h3>
		<hr>
		<!-- from http://getbootstrap.com/2.3.2/javascript.html#tabs -->
		<ul class="nav nav-tabs">
			<li class="active"><a href="#faqView" data-toggle="tab">View</a></li>
			<li><a href="#faqEdit" data-toggle="tab">Edit</a></li>
		</ul>
		<div id="faqContent" class="tab-content">
			<div class="tab-pane fade in active" id="faqView">
			    <p>
					<%= problem.faq %>
			    </p>
			</div>
			<div class="tab-pane fade" id="faqEdit">
			<form name="faqInput" action="/submitEdit">
				<input type="hidden" name="problemName" value="<%= problem.nid %>">
				<input type="hidden" name="problemSection" value="faq">
				<input type="hidden" name="problemOldText" value="<%= problem.faq %>">
			    	<textarea name="problemNewText" rows="10" cols="300" class="span9"><%= problem.faq %></textarea>
				<button type="submit" class="btn">Save</button>
			</form>
			</div>
		</div>
	</section>