
	<section id="solutions">
		<h3>Potential Solutions</h3>
		<hr>
		<!-- from http://getbootstrap.com/2.3.2/javascript.html#tabs -->
		<ul class="nav nav-tabs">
			<li class="active"><a href="#solutionsView" data-toggle="tab">View</a></li>
			<li><a href="#solutionsEdit" data-toggle="tab">Edit</a></li>
		</ul>
		<div id="solutionsContent" class="tab-content">
			<div class="tab-pane fade in active" id="solutionsView">
			    <p>
					<%= problem.solutions %>
			    </p>
			</div>
			<div class="tab-pane fade" id="solutionsEdit">
			<form name="solutionsInput" action="/submitEdit">
				<input type="hidden" name="problemName" value="<%= problem.nid %>">
				<input type="hidden" name="problemSection" value="solutions">
				<input type="hidden" name="problemOldText" value="<%= problem.solutions %>">
			    	<textarea name="problemNewText" rows="10" cols="300" class="span9"><%= problem.solutions %></textarea>
				<button type="submit" class="btn">Save</button>
			</form>
			</div>
		</div>
	</section>