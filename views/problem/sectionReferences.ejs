
	<section id="references">
		<h3>References</h3>
		<hr>
		<!-- from http://getbootstrap.com/2.3.2/javascript.html#tabs -->
		<ul class="nav nav-tabs">
			<li class="active"><a href="#referencesView" data-toggle="tab">View</a></li>
			<li><a href="#referencesEdit" data-toggle="tab">Edit</a></li>
		</ul>
		<div id="referencesContent" class="tab-content">
			<div class="tab-pane fade in active" id="referencesView">
			    <p>
					<%= problem.references %>
			    </p>
			</div>
			<div class="tab-pane fade" id="referencesEdit">
			<form name="referencesInput" action="/submitEdit">
				<input type="hidden" name="problemName" value="<%= problem.nid %>">
				<input type="hidden" name="problemSection" value="references">
				<input type="hidden" name="problemOldText" value="<%= problem.references %>">
			    	<textarea name="problemNewText" rows="10" cols="300" class="span9"><%= problem.references %></textarea>
				<button type="submit" class="btn">Save</button>
			</form>
			</div>
		</div>
	</section>