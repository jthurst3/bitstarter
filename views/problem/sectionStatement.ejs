
	<section id="statement">
		<h3>Formal Statement</h3>
		<hr>
		<!-- from http://getbootstrap.com/2.3.2/javascript.html#tabs -->
		<ul class="nav nav-tabs">
			<li class="active"><a href="#statementView" data-toggle="tab">View</a></li>
			<li><a href="#statementEdit" data-toggle="tab">Edit</a></li>
		</ul>
		<div id="statementContent" class="tab-content">
			<div class="tab-pane fade in active" id="statementView">
			    <p>
					<%= problem.statement %>
			    </p>
			</div>
			<div class="tab-pane fade" id="statementEdit">
			<form name="statementInput" action="/submitEdit">
				<input type="hidden" name="problemName" value="<%= problem.nid %>">
				<input type="hidden" name="problemSection" value="statement">
				<input type="hidden" name="problemOldText" value="<%= problem.statement %>">
			    	<textarea name="problemNewText" rows="10" cols="300" class="span9"><%= problem.statement %></textarea>
				<button type="submit" class="btn">Save</button>
			</form>
			</div>
		</div>
	</section>