<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= field.name %> | The Unsolved Problems Database</title>
	<% include ../headers %>
	<script src="/assets/js/checkProblemForm.js"></script>
	<script src="/assets/js/checkFieldForm.js"></script>
  </head>
  <body>
	  <!-- navigation pane -->
	  <% include ../navbar %>
	  
	  <header class="jumbotron">
	  	<div class="row-fluid">
	  	  <div class="span9 offset3">
	  		  <div class="row-fluid heading">
	  			  <h2><%= field.name %></h2>
	  		  </div>
	  		  <div class="row-fluid subheading">
	  			  <p class="lead">Problem List</p>
	  		  </div>
	  	  </div>
	  	</div>
	  </header>
	  
    <div class="row">
	  <% include navsubjects %>
	  <% include newField %>
	  <div class="span9">
	  	<% include ../alert %>
		  <section id="problems">
			  <h3>Problems &nbsp; <% include newProblem %></h3>
			  <hr>
			  <% if(problems.length == 0) { %>
			  <p>No unsolved problems are listed in this field yet.</p>
			  <% } else { %>
				  <!-- modified from http://bootsnipp.com/snipps/groupable-table -->
				  <table class="table table-striped table-condensed">
				  						<thead>
				  							<tr>
				  								<th>Name</th>
				  								<th>Subtopic</th>
				  							</tr>
				  						</thead>   
				  						<tbody>
											<% problems.forEach(function(prob){ %>
												<tr>
													<td><a href="/problem/<%= prob.nid %>"><%= prob.name %></a></td>
													<td><%= prob.subtopic %></td>
												</tr>
											  <% }) %>
				  						</tbody>
				  </table>
				  <% } %>
		  </section>
	  </div>
    </div>
	<% include ../footer %>
	<% include ../scripts %>
  </body>
</html>